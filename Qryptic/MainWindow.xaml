<Window
    x:Class="Qryptic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Qryptic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    MouseMove="Window_MouseMove"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="blinksb">
            <DoubleAnimation
                AutoReverse="True"
                FillBehavior="Stop"
                SpeedRatio="1.4"
                Storyboard.TargetName="LeftEye"
                Storyboard.TargetProperty="(Rectangle.Height)"
                From="24"
                To="8"
                Duration="0:0:0.3" />
            <DoubleAnimation
                AutoReverse="True"
                FillBehavior="Stop"
                SpeedRatio="1.4"
                Storyboard.TargetName="RightEye"
                Storyboard.TargetProperty="(Rectangle.Height)"
                From="24"
                To="8"
                Duration="0:0:0.3" />
        </Storyboard>
        <SolidColorBrush x:Key="Highlight" Color="#312F2F" />
        <SolidColorBrush x:Key="Text_Primary" Color="#22181C" />
        <Style TargetType="{x:Type TabControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Border BorderThickness="0" CornerRadius="15 0 20 0">
                            <ContentPresenter ContentSource="SelectedContent" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border
        Margin="30"
        Padding="0,10,0,0"
        Background="#F6E8EA"
        ClipToBounds="True"
        CornerRadius="20">
        <Border.Clip>
            <RectangleGeometry
                RadiusX="20"
                RadiusY="20"
                Rect="0,0,400,540" />
        </Border.Clip>
        <!--<Border.Effect>
            <DropShadowEffect Opacity="0.2" ShadowDepth="3" />
        </Border.Effect>-->
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8.5*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Padding="15,0"
                Background="Transparent"
                MouseDown="Border_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image Margin="0,5,0,10" Source="{StaticResource qr_code_boldDrawingImage}" />
                        <Label
                            Margin="0,-3,0,0"
                            Content="Qryptic"
                            FontFamily="{StaticResource Batangas}"
                            FontSize="34"
                            Foreground="{DynamicResource Text_Primary}" />
                    </StackPanel>
                    <Border
                        x:Name="CloseBtn"
                        Grid.Column="1"
                        Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                        Margin="16,0,0,16"
                        Padding="5"
                        Background="Transparent"
                        CornerRadius="5"
                        Cursor="Hand"
                        PreviewMouseLeftButtonDown="CloseBtn_PreviewMouseLeftButtonDown">
                        <Image Source="{DynamicResource xDrawingImage}" />
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ddd1d3"
                                            Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="Transparent"
                                            Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="IndRow" Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    x:Name="Indicator"
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="#EF626C"
                    ClipToBounds="True"
                    CornerRadius="0 5 5 0" />
                <local:NavButton
                    x:Name="Nav_Scan"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="Nav_Scan_Click"
                    Focusable="False"
                    ImageSource="{StaticResource barcodeDrawingImage}"
                    LabelText="Scan" />
                <local:NavButton
                    x:Name="Nav_Create"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="Nav_Create_Click"
                    Focusable="False"
                    ImageSource="{StaticResource plus_circleDrawingImage}"
                    LabelText="Create" />
                <local:NavButton
                    x:Name="Nav_Cache"
                    Grid.Row="2"
                    Grid.Column="1"
                    Click="Nav_Cache_Click"
                    Focusable="False"
                    ImageSource="{StaticResource clock_counter_clockwiseDrawingImage}"
                    LabelText="Cache" />
                <local:NavButton
                    x:Name="Nav_Config"
                    Grid.Row="4"
                    Grid.Column="1"
                    Click="Nav_Config_Click"
                    Focusable="False"
                    ImageSource="{StaticResource gear_sixDrawingImage}"
                    LabelText="Config" />
                <Border
                    Grid.RowSpan="5"
                    Grid.Column="2"
                    Background="White"
                    ClipToBounds="True"
                    CornerRadius="15 0 20 0">
                    <TabControl
                        x:Name="Navigator"
                        BorderThickness="0"
                        SelectedIndex="4">
                        <TabItem Visibility="Collapsed">
                            <Grid
                                x:Name="ScannerGrid"
                                Width="250"
                                Height="200"
                                VerticalAlignment="Top">
                                <Border
                                    Width="200"
                                    Height="200"
                                    BorderBrush="#22181C"
                                    BorderThickness="2"
                                    ClipToBounds="True"
                                    CornerRadius="15">
                                    <Border.Background>
                                        <ImageBrush x:Name="WebcamFeed" Stretch="UniformToFill" />
                                    </Border.Background>
                                </Border>
                                <Rectangle
                                    x:Name="Scanner"
                                    Width="250"
                                    Height="5"
                                    VerticalAlignment="Top"
                                    Fill="#EF626C"
                                    RadiusX="2"
                                    RadiusY="2">
                                    <Rectangle.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Direction="-90"
                                            Opacity="0.4"
                                            ShadowDepth="2"
                                            Color="#EF626C" />
                                    </Rectangle.Effect>
                                </Rectangle>
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Bottom"
                                    Content="Create New"
                                    FontFamily="{StaticResource SpaceGrotesk}"
                                    FontSize="22"
                                    FontWeight="Bold" />
                                <local:FlatButton
                                    x:Name="TextBtn"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Click="TextBtn_Click"
                                    ImageSource="{StaticResource article_ny_timesDrawingImage}"
                                    LabelText="Text" />
                                <local:FlatButton
                                    x:Name="WebBtn"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Click="WebBtn_Click"
                                    ImageSource="{StaticResource globe_simpleDrawingImage}"
                                    LabelText="Website" />
                                <local:FlatButton
                                    x:Name="ContactBtn"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Click="ContactBtn_Click"
                                    ImageSource="{StaticResource user_circleDrawingImage}"
                                    LabelText="Contact" />
                                <local:FlatButton
                                    x:Name="WifiBtn"
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Click="WifiBtn_Click"
                                    ImageSource="{StaticResource wifi_highDrawingImage}"
                                    LabelText="Wifi Cred." />
                                <local:FlatButton
                                    x:Name="EmailBtn"
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Click="EmailBtn_Click"
                                    ImageSource="{StaticResource envelopeDrawingImage}"
                                    LabelText="Email" />
                                <local:FlatButton
                                    x:Name="SMSBtn"
                                    Grid.Row="6"
                                    Grid.Column="3"
                                    Click="SMSBtn_Click"
                                    ImageSource="{StaticResource chat_dotsDrawingImage}"
                                    LabelText="SMS" />
                                <local:FlatButton
                                    x:Name="LocBtn"
                                    Grid.Row="8"
                                    Grid.Column="1"
                                    Click="LocBtn_Click"
                                    ImageSource="{StaticResource map_pinDrawingImage}"
                                    LabelText="Location" />
                                <local:FlatButton
                                    x:Name="EventBtn"
                                    Grid.Row="8"
                                    Grid.Column="3"
                                    Click="EventBtn_Click"
                                    ImageSource="{StaticResource calendar_dotsDrawingImage}"
                                    LabelText="Event" />
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Label Content="Cache" />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Label Content="Config" />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.35*" />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition Height="2*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    x:Name="HeaderText"
                                    Margin="5"
                                    Orientation="Horizontal">
                                    <Border
                                        x:Name="BackBtn"
                                        Padding="5"
                                        Background="Transparent"
                                        CornerRadius="5"
                                        Cursor="Hand"
                                        PreviewMouseLeftButtonDown="CloseBtn_PreviewMouseLeftButtonDown">
                                        <Image Source="{DynamicResource arrow_leftDrawingImage}" />
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#ddd1d3"
                                                            Duration="0:0:0.15" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="Transparent"
                                                            Duration="0:0:0.15" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                    </Border>
                                    <Label
                                        VerticalAlignment="Stretch"
                                        Content="Text"
                                        FontFamily="{StaticResource SpaceGrotesk}"
                                        FontSize="14" />
                                </StackPanel>
                                <TextBox Grid.Row="1" Text="" />
                                <TextBox Grid.Row="2" Text="Hello, World!" />
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <TextBox Text="Hello, World!" />
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
            <Canvas Name="DrawingCanvas" Opacity="0">
                <Ellipse
                    Canvas.Left="125"
                    Canvas.Top="80"
                    Width="150"
                    Height="150"
                    Stroke="{DynamicResource Highlight}"
                    StrokeThickness="7" />
                <Rectangle
                    Name="LeftEye"
                    Canvas.Left="164"
                    Canvas.Top="132"
                    Height="24"
                    RadiusX="2"
                    RadiusY="2"
                    Stroke="{DynamicResource Highlight}"
                    StrokeThickness="10" />
                <Rectangle
                    Name="RightEye"
                    Canvas.Left="222"
                    Canvas.Top="132"
                    Height="24"
                    RadiusX="2"
                    RadiusY="2"
                    Stroke="{DynamicResource Highlight}"
                    StrokeThickness="10" />
                <Path
                    Data="M190,165 Q200,175 210,165"
                    Fill="Transparent"
                    Stroke="{DynamicResource Highlight}"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round"
                    StrokeThickness="8" />
                <Path
                    Data="M130,310 Q150,225 200,227"
                    Fill="Transparent"
                    Stroke="{DynamicResource Highlight}"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round"
                    StrokeThickness="7" />
                <Path
                    Data="M270,310 Q250,225 200,227"
                    Fill="Transparent"
                    Stroke="{DynamicResource Highlight}"
                    StrokeEndLineCap="Round"
                    StrokeStartLineCap="Round"
                    StrokeThickness="7" />

            </Canvas>
        </Grid>
    </Border>
</Window>
