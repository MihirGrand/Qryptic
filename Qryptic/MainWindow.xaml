<Window
    x:Class="Qryptic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Qryptic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="600"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    MouseMove="Window_MouseMove"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="blinksb">
            <DoubleAnimation
                AutoReverse="True"
                FillBehavior="Stop"
                SpeedRatio="1.4"
                Storyboard.TargetName="LeftEye"
                Storyboard.TargetProperty="(Rectangle.Height)"
                From="24"
                To="8"
                Duration="0:0:0.3" />
            <DoubleAnimation
                AutoReverse="True"
                FillBehavior="Stop"
                SpeedRatio="1.4"
                Storyboard.TargetName="RightEye"
                Storyboard.TargetProperty="(Rectangle.Height)"
                From="24"
                To="8"
                Duration="0:0:0.3" />
        </Storyboard>
        <local:CodeTypeToResourceConverter x:Key="CodeTypeToResourceConverter" />
    </Window.Resources>
    <Border
        Margin="30"
        Padding="0,10,0,0"
        Background="#F6E8EA"
        ClipToBounds="True"
        CornerRadius="20">
        <Border.Clip>
            <RectangleGeometry
                RadiusX="20"
                RadiusY="20"
                Rect="0,0,400,540" />
        </Border.Clip>
        <!--<Border.Effect>
            <DropShadowEffect Opacity="0.2" ShadowDepth="3" />
        </Border.Effect>-->
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8.5*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                Padding="15,0"
                Background="Transparent"
                MouseDown="Border_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Image Margin="0,5,0,10" Source="{StaticResource qr_code_boldDrawingImage}" />
                        <Label
                            Margin="0,-3,0,0"
                            Content="Qryptic"
                            FontFamily="{StaticResource Batangas}"
                            FontSize="34"
                            Foreground="{DynamicResource Text_Primary}" />
                    </StackPanel>
                    <Border
                        x:Name="CloseBtn"
                        Grid.Column="1"
                        Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                        Margin="16,0,0,16"
                        Padding="5"
                        Background="Transparent"
                        CornerRadius="5"
                        Cursor="Hand"
                        PreviewMouseLeftButtonDown="CloseBtn_PreviewMouseLeftButtonDown"
                        ToolTip="Close">
                        <Image Source="{DynamicResource xDrawingImage}" />
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#ddd1d3"
                                            Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="Transparent"
                                            Duration="0:0:0.15" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="IndRow" Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    x:Name="Indicator"
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="#EF626C"
                    ClipToBounds="True"
                    CornerRadius="0 5 5 0" />
                <local:NavButton
                    x:Name="Nav_Scan"
                    Grid.Row="0"
                    Grid.Column="1"
                    Click="Nav_Scan_Click"
                    Focusable="False"
                    ImageSource="{StaticResource barcodeDrawingImage}"
                    LabelText="Scan" />
                <local:NavButton
                    x:Name="Nav_Create"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="Nav_Create_Click"
                    Focusable="False"
                    ImageSource="{StaticResource plus_circleDrawingImage}"
                    LabelText="Create" />
                <local:NavButton
                    x:Name="Nav_Cache"
                    Grid.Row="2"
                    Grid.Column="1"
                    Click="Nav_Cache_Click"
                    Focusable="False"
                    ImageSource="{StaticResource clock_counter_clockwiseDrawingImage}"
                    LabelText="Cache" />
                <local:NavButton
                    x:Name="Nav_Config"
                    Grid.Row="4"
                    Grid.Column="1"
                    Click="Nav_Config_Click"
                    Focusable="False"
                    ImageSource="{StaticResource gear_sixDrawingImage}"
                    LabelText="Config" />
                <Border
                    Grid.RowSpan="5"
                    Grid.Column="2"
                    Background="White"
                    ClipToBounds="True"
                    CornerRadius="15 0 20 0">
                    <TabControl
                        x:Name="Navigator"
                        BorderThickness="0"
                        SelectedIndex="{Binding CurrentPage}">
                        <TabItem Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="0.1*" />
                                    <RowDefinition Height="0.8*" />
                                </Grid.RowDefinitions>
                                <Grid
                                    x:Name="ScannerGrid"
                                    Width="250"
                                    Height="200"
                                    Margin="0,0,0,20"
                                    VerticalAlignment="Bottom">
                                    <Border
                                        x:Name="WebcamBorder"
                                        Width="200"
                                        Height="200"
                                        BorderBrush="#22181C"
                                        BorderThickness="2"
                                        ClipToBounds="True"
                                        CornerRadius="15">
                                        <Border.Background>
                                            <ImageBrush x:Name="WebcamFeed" Stretch="UniformToFill" />
                                        </Border.Background>
                                        <Border
                                            x:Name="UploadBtn"
                                            Height="40"
                                            Margin="-1"
                                            VerticalAlignment="Bottom"
                                            Background="White"
                                            BorderBrush="#22181C"
                                            BorderThickness="1,2,1,1"
                                            CornerRadius="10 10 15 15"
                                            Cursor="Hand"
                                            IsHitTestVisible="True"
                                            PreviewMouseLeftButtonDown="UploadBtn_PreviewMouseLeftButtonDown">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                IsHitTestVisible="True"
                                                Orientation="Horizontal">
                                                <Image Margin="0,8,5,8" Source="{DynamicResource floppy_disk_back_fillDrawingImage}" />
                                                <Label
                                                    VerticalAlignment="Center"
                                                    Content="Upload"
                                                    FontFamily="{StaticResource SpaceGrotesk_Bold}"
                                                    FontSize="14" />
                                            </StackPanel>
                                            <Border.Triggers>
                                                <EventTrigger RoutedEvent="MouseEnter">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="#ddd1d3"
                                                                Duration="0:0:0.15" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                                <EventTrigger RoutedEvent="MouseLeave">
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                To="White"
                                                                Duration="0:0:0.15" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Border.Triggers>
                                        </Border>
                                    </Border>
                                    <Rectangle
                                        x:Name="Scanner"
                                        Width="250"
                                        Height="5"
                                        VerticalAlignment="Top"
                                        Fill="#EF626C"
                                        RadiusX="2"
                                        RadiusY="2">
                                        <Rectangle.Effect>
                                            <DropShadowEffect
                                                BlurRadius="4"
                                                Direction="-90"
                                                Opacity="0.4"
                                                ShadowDepth="2"
                                                Color="#EF626C" />
                                        </Rectangle.Effect>
                                    </Rectangle>
                                </Grid>
                                <StackPanel
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Orientation="Horizontal">
                                    <Label
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="Live"
                                        FontFamily="{StaticResource SpaceGrotesk_Regular}" />
                                    <CheckBox
                                        Checked="CheckBox_Checked"
                                        IsChecked="{Binding LiveMode}"
                                        Style="{DynamicResource SwitchCheckBoxStyle}"
                                        Unchecked="CheckBox_Unchecked" />
                                    <Label
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Content="Static"
                                        FontFamily="{StaticResource SpaceGrotesk_Regular}" />
                                </StackPanel>
                                <Border
                                    Grid.Row="2"
                                    Margin="30,20,30,20"
                                    BorderBrush="#22181C"
                                    BorderThickness="1.5"
                                    CornerRadius="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                            <RowDefinition Height="1.2*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.4*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            BorderThickness="0,0,1.5,0">
                                            <Image
                                                x:Name="qrType"
                                                Margin="12,20"
                                                Source="{DynamicResource barcodeDrawingImage}" />
                                            <Border.BorderBrush>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Rectangle
                                                            Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                                                            Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"
                                                            Stroke="#22181C"
                                                            StrokeDashArray="4 4"
                                                            StrokeThickness="2" />
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Border.BorderBrush>
                                        </Border>
                                        <TextBlock
                                            x:Name="decoded"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource SpaceGrotesk_Thin}"
                                            Text="Looking for a code..."
                                            TextWrapping="Wrap" />
                                        <Border
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="-1"
                                            BorderBrush="#22181C"
                                            BorderThickness="0.8"
                                            CornerRadius="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Button
                                                    x:Name="BtnCopy"
                                                    Grid.Column="0"
                                                    Background="Transparent"
                                                    Click="BtnCopy_Click"
                                                    Content="Copy"
                                                    FontSize="14"
                                                    Style="{DynamicResource FlatButtonStyle_3}"
                                                    Tag="{DynamicResource copy_fillDrawingImage}" />
                                                <Button
                                                    x:Name="BtnSave"
                                                    Grid.Column="1"
                                                    Background="Transparent"
                                                    Click="BtnSave_Click"
                                                    Content="Save"
                                                    FontSize="14"
                                                    Style="{DynamicResource FlatButtonStyle_2}"
                                                    Tag="{DynamicResource floppy_disk_back_fillDrawingImage}" />
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="0.4*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Bottom"
                                    Content="Create New"
                                    FontFamily="{StaticResource SpaceGrotesk_Regular}"
                                    FontSize="22"
                                    FontWeight="Bold" />
                                <local:FlatButton
                                    x:Name="TextBtn"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Click="TextBtn_Click"
                                    ImageSource="{StaticResource article_ny_timesDrawingImage}"
                                    LabelText="Text" />
                                <local:FlatButton
                                    x:Name="WebBtn"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Click="WebBtn_Click"
                                    ImageSource="{StaticResource globe_simpleDrawingImage}"
                                    LabelText="Website" />
                                <local:FlatButton
                                    x:Name="ContactBtn"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Click="ContactBtn_Click"
                                    ImageSource="{StaticResource user_circleDrawingImage}"
                                    LabelText="Contact" />
                                <local:FlatButton
                                    x:Name="WifiBtn"
                                    Grid.Row="4"
                                    Grid.Column="3"
                                    Click="WifiBtn_Click"
                                    ImageSource="{StaticResource wifi_highDrawingImage}"
                                    LabelText="Wifi Cred." />
                                <local:FlatButton
                                    x:Name="EmailBtn"
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Click="EmailBtn_Click"
                                    ImageSource="{StaticResource envelopeDrawingImage}"
                                    LabelText="Email" />
                                <local:FlatButton
                                    x:Name="SMSBtn"
                                    Grid.Row="6"
                                    Grid.Column="3"
                                    Click="SMSBtn_Click"
                                    ImageSource="{StaticResource chat_dotsDrawingImage}"
                                    LabelText="SMS" />
                                <local:FlatButton
                                    x:Name="LocBtn"
                                    Grid.Row="8"
                                    Grid.Column="1"
                                    Click="LocBtn_Click"
                                    ImageSource="{StaticResource map_pinDrawingImage}"
                                    LabelText="Location" />
                                <local:FlatButton
                                    x:Name="EventBtn"
                                    Grid.Row="8"
                                    Grid.Column="3"
                                    Click="EventBtn_Click"
                                    ImageSource="{StaticResource calendar_dotsDrawingImage}"
                                    LabelText="Event" />
                                <local:FlatButton
                                    x:Name="UPIBtn"
                                    Grid.Row="10"
                                    Grid.Column="1"
                                    Click="UPIBtn_Click"
                                    ImageSource="{StaticResource currency_inrDrawingImage}"
                                    LabelText="UPI" />
                                <local:FlatButton
                                    x:Name="BarcodeBtn"
                                    Grid.Row="10"
                                    Grid.Column="3"
                                    Click="BarcodeBtn_Click"
                                    ImageSource="{StaticResource barcodeDrawingImage}"
                                    LabelText="Barcode" />
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5.8*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Bottom"
                                    Content="Cache"
                                    FontFamily="{DynamicResource SpaceGrotesk_Regular}"
                                    FontSize="22"
                                    FontWeight="Bold" />
                                <ListView
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Margin="0,10,0,20"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    BorderThickness="0"
                                    ItemsSource="{Binding Cache}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Grid.Row="2"
                                                Margin="0,0,0,10"
                                                BorderBrush="#22181C"
                                                BorderThickness="1.5"
                                                CornerRadius="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.3*" />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" BorderThickness="0,0,1.5,0">
                                                        <Image
                                                            x:Name="qrType"
                                                            Margin="12,20"
                                                            Source="{Binding Type, Converter={StaticResource CodeTypeToResourceConverter}}" />
                                                        <Border.BorderBrush>
                                                            <VisualBrush>
                                                                <VisualBrush.Visual>
                                                                    <Rectangle
                                                                        Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                                                                        Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"
                                                                        Stroke="#22181C"
                                                                        StrokeDashArray="4 4"
                                                                        StrokeThickness="2" />
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Border.BorderBrush>
                                                    </Border>
                                                    <TextBlock
                                                        x:Name="decoded"
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="5,0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="{StaticResource SpaceGrotesk_Thin}"
                                                        Text="{Binding Result}"
                                                        TextWrapping="Wrap" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListViewItem}">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                        <ContentPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                </ListView>
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="9*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Bottom"
                                    Content="Config"
                                    FontFamily="{DynamicResource SpaceGrotesk_Regular}"
                                    FontSize="22"
                                    FontWeight="Bold" />
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,10"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="ClearCacheBtn"
                                        Click="ClearCacheBtn_Click"
                                        Content="Clear Cache"
                                        Style="{DynamicResource FlatButtonStyle}" />
                                </StackPanel>
                                <Label
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Center"
                                    FontFamily="{DynamicResource SpaceGrotesk_Regular}"
                                    FontSize="15"
                                    FontWeight="Regular">
                                    <TextBlock>
                                        Made by<Run Text=" " />
                                        <Hyperlink NavigateUri="https://github.com/mihirgrand" RequestNavigate="Hyperlink_RequestNavigate">
                                            Mihir
                                        </Hyperlink></TextBlock>
                                </Label>
                            </Grid>
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageText />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageWeb />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageContact />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageWifi />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageEmail />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageSMS />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageLocation />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageEvent />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageUPI />
                        </TabItem>
                        <TabItem Visibility="Collapsed">
                            <local:PageBarcode />
                        </TabItem>
                    </TabControl>
                </Border>
                <Border
                    x:Name="toast"
                    Grid.RowSpan="5"
                    Grid.Column="2"
                    Margin="10,10,10,-75"
                    Padding="10"
                    VerticalAlignment="Bottom"
                    Background="#29bf12"
                    CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.16*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Image
                            x:Name="toast_icon"
                            Grid.RowSpan="2"
                            Margin="5"
                            VerticalAlignment="Center"
                            Source="{DynamicResource check_boldDrawingImage}" />
                        <Label
                            x:Name="toast_title"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Content="Title"
                            FontFamily="{DynamicResource SpaceGrotesk_Regular}"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White" />
                        <Label
                            x:Name="toast_msg"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Content="Message"
                            FontFamily="{DynamicResource SpaceGrotesk_Regular}"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White" />
                    </Grid>
                </Border>
            </Grid>
