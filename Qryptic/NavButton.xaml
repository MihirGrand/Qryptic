<UserControl
    x:Class="Qryptic.NavButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Qryptic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        x:Name="InnerButton"
        Grid.Row="1"
        Grid.Column="1"
        Background="Transparent"
        BorderThickness="0"
        Click="InnerButton_Click"
        ClipToBounds="True"
        Cursor="Hand"
        Focusable="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Margin="0,0,0,3"
                Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Label
                Grid.Row="1"
                Padding="0,0,0,5"
                VerticalAlignment="Top"
                VerticalContentAlignment="Top"
                Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="13"
                FontWeight="Medium" />
        </Grid>
        <Button.Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                x:Name="Border"
                                Padding="5,5,5,0"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                To="#ddd1d3"
                                                Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                To="Transparent"
                                                Duration="0:0:0.15" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Button.Style>
    </Button>
</UserControl>
