<UserControl
    x:Class="Qryptic.PageContact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Qryptic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition />
            <RowDefinition Height="0.35*" />
        </Grid.RowDefinitions>
        <StackPanel
            x:Name="HeaderText"
            Margin="5"
            Orientation="Horizontal">
            <Border
                x:Name="BackBtn"
                Margin="2"
                Padding="5"
                Background="Transparent"
                CornerRadius="10"
                Cursor="Hand"
                PreviewMouseDown="BackBtn_PreviewMouseDown">
                <Image Source="{DynamicResource arrow_leftDrawingImage}" />
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#ddd1d3"
                                    Duration="0:0:0.15" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="Transparent"
                                    Duration="0:0:0.15" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
            <Label
                VerticalAlignment="Center"
                Content="Contact"
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="14" />
        </StackPanel>
        <Grid
            Grid.Row="1"
            Margin="15,0"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="First Name: "
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="13"
                FontWeight="Medium" />
            <TextBox
                x:Name="tbox_firstName"
                Grid.Column="1"
                Margin="0,2"
                FontSize="13"
                FontWeight="Normal"
                Style="{DynamicResource ModernTextBox_Thin}"
                Tag="Enter first name" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Last Name: "
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="13"
                FontWeight="Medium" />
            <TextBox
                x:Name="tbox_lastName"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,2"
                FontSize="13"
                FontWeight="Normal"
                Style="{DynamicResource ModernTextBox_Thin}"
                Tag="Enter last name" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Phone: "
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="13"
                FontWeight="Medium" />
            <TextBox
                x:Name="tbox_phone"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,2"
                FontSize="13"
                FontWeight="Normal"
                Style="{DynamicResource ModernTextBox_Thin}"
                Tag="Enter phone number" />
            <Label
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Email: "
                FontFamily="{StaticResource SpaceGrotesk}"
                FontSize="13"
                FontWeight="Medium" />
            <TextBox
                x:Name="tbox_email"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,2"
                FontSize="13"
                FontWeight="Normal"
                Style="{DynamicResource ModernTextBox_Thin}"
                Tag="Enter email address" />
        </Grid>
        <Button
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="FlatButton_Click"
            Content="Create"
            Style="{DynamicResource FlatButtonStyle}"
            Tag="{DynamicResource plus_circleDrawingImage}" />
        <Border
            Grid.Row="3"
            Grid.RowSpan="2"
            Margin="30,20"
            BorderBrush="#22181C"
            BorderThickness="1.4"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="0.8*" />
                </Grid.RowDefinitions>
                <Image
                    x:Name="img"
                    Grid.Row="0"
                    Margin="2" />
                <Border
                    Grid.Row="1"
                    Margin="-1"
                    BorderBrush="#22181C"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="BtnCopy"
                            Grid.Column="0"
                            Background="Transparent"
                            Click="BtnCopy_Click"
                            Content="Copy"
                            FontSize="13"
                            Style="{DynamicResource FlatButtonStyle_3}"
                            Tag="{DynamicResource copy_fillDrawingImage}" />
                        <Button
                            x:Name="BtnSave"
                            Grid.Column="1"
                            Background="Transparent"
                            Click="BtnSave_Click"
                            Content="Save"
                            FontSize="13"
                            Style="{DynamicResource FlatButtonStyle_2}"
                            Tag="{DynamicResource floppy_disk_back_fillDrawingImage}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
